<%= form_for @article do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>

  </p>
  <p>
    <%= f.label :tag_list, "Tags(separated by Comma)" %><br />
    <%= f.text_field:tag_list %>
  </p>

  <p>
    <%= f.label :category_id %><br />
    <%= f.collection_select :category_id, Category.order(:name), :id, :name, include_blank: true %>
  </p>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </p>

   
  <p><%= f.submit %></p>
<% end %>
